#!/bin/sh
# Proper header for a Bash script.

DEPLOY_ADDRESS="/var/www/rivi.senman.cz/app/"
DEPLOY_ROOT="/var/www/rivi.senman.cz/"


echo "Start deploy ..."



cd ${DEPLOY_ADDRESS} && git pull && cd -

echo "...  deploy finished."


sudo composer.phar dump-autoload -d ${DEPLOY_ADDRESS}

php ${DEPLOY_ADDRESS}/artisan dump-autoload


php ${DEPLOY_ADDRESS}/artisan migrate